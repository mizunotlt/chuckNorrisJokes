<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    tools:ignore="ContentDescription">


    <FrameLayout
        android:id="@+id/frameByRecyclerListForJokes"
        android:layout_width="330dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/controlFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutForRecyclerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listJokes"
                android:layout_width="260dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/controlFrameLayout"
        android:layout_width="360dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/navigationFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/countJokes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopEditText"
                android:ems="10"
                android:hint="@string/hintTextEdit"
                android:text="@string/defaultCount"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:importantForAutofill="no" />

            <Button
                android:id="@+id/buttonReload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickReload"
                android:text="@string/textButton"
                android:background="@color/backgroundButton"
                android:textColor="@color/textColorButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countJokes"
                app:layout_constraintVertical_bias="0.6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/navigationFrameLayout"
        android:layout_width="@dimen/linearWidth"
        android:layout_height="@dimen/linearHeight"
        android:layout_marginBottom="@dimen/marginBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/layoutForButtons"
            style="?android:attr/buttonBarStyle"
            android:layout_width="@dimen/linearWidth"
            android:layout_height="@dimen/linearHeight"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonJokes"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/buttonWidthJoke"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/click_button_jokes" />

            <ImageButton
                android:id="@+id/buttonWeb"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/buttonWidthWeb"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickOnWebButton"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/no_button_web" />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>